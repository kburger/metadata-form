{
    "title": "FAIR datapoint",
    "type": "http://www.re3data.org/schema/3-0#Repository",
    "namespaces": {
        "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
        "rdfs": "http://www.w3.org/2000/01/rdf-schema#",
        "dct": "http://purl.org/dc/terms/",
        "r3d": "http://www.re3data.org/schema/3-0#",
        "foaf": "http://xmlns.com/foaf/0.1/",
        "fdp": "http://rdf.biosemantics.org/ontologies/fdp-o#",
        "datacite": "http://purl.org/spar/datacite/"
    },
    "components": {
        "dct-title": {
            "name": "Title",
            "url": "http://purl.org/dc/terms/title",
            "type": "text",
            "description": "A name given to the FAIR Data Point. Can reflect topics, institutions, authorities, locations.",
            "required": true,
            "examples": [
                "FDP Leiden University Medical Center",
                "Department of Human Genetics",
                "Den Dunnen Lab",
                "LOVD",
                "Leiden Gemeente",
                "New York City Public Library",
                "The Weather Company",
                "OpenTraffic",
                "Netflix",
                "National Oceanic and Atmospheric Administration",
                "Mendeley Data",
                "EBI",
                "Data Hub",
                "Data Verse"
            ]
        },
        "fdp-metadataissued": {
            "name": "Release date",
            "url": "http://rdf.biosemantics.org/ontologies/fdp-o#metadataIssued",
            "type": "text",
            "description": "Date of formal issuance (e.g., publication) of the repository.",
            "required": true,
            "generated": true
        },
        "fdp-metadatamodified": {
            "name": "Update/modification date",
            "url": "http://rdf.biosemantics.org/ontologies/fdp-o#metadataModified",
            "type": "text",
            "description": "Most recent date on which the repository was changed, updated or modified.",
            "required": true,
            "generated": true
        },
        "dct-hasversion": {
            "name": "Has version",
            "url": "http://purl.org/dc/terms/hasVersion",
            "type": "text",
            "description": "The version number for this FDP. Can accept arbitrary string values.",
            "required": true,
            "examples": [
                "1.0",
                "2017_02"
            ]
        },
        "dct-description": {
            "name": "Description",
            "url": "http://purl.org/dc/terms/description",
            "type": "text",
            "description": "A free-text account of the repository.",
            "required": false
        },
        "dct-publisher": {
            "name": "Publisher",
            "url": "http://purl.org/dc/terms/publisher",
            "type": "url",
            "description": "All institutions being responsible for funding, creating and/or running the repository.",
            "required": true,
            "nested": {
                "type": "http://xmlns.com/foaf/0.1/Organization",
                "components": {
                    "institute-foaf-name": {
                        "name": "Name",
                        "url": "http://xmlns.com/foaf/0.1/name",
                        "type": "text",
                        "description": "Name of the insitution",
                        "required": true,
                        "examples": [
                            "Springer-Nature",
                            "Science Magazine",
                            "The Leiden Biosemantics Group"
                        ]
                    }
                }
            }
        },
        "dct-language": {
            "name": "Language",
            "url": "http://purl.org/dc/terms/language",
            "type": "url",
            "description": "The language of the repository. This refers to the language used in the textual metadata describing titles, descriptions, etc. of the datasets in the catalog.",
            "multiple": true,
            "required": false,
            "autocomplete": {
                "constant": "language"
            }
        },
        "dct-license": {
            "name": "License",
            "url": "http://purl.org/dc/terms/license",
            "type": "url",
            "description": "This links to the license document under which the catalog is made available and not the datasets. Even if the license of the catalog applies to all of its datasets and distributions, it should be replicated on each distribution.",
            "required": false,
            "autocomplete": {
                "constant": "license"
            }
        },
        "dct-subject": {
            "name": "Subject",
            "url": "http://purl.org/dc/terms/subject",
            "type": "url",
            "description": "The topic of the resource.",
            "required": false
        },
        "dct-alternative": {
            "name": "Alternative Title",
            "url": "http://purl.org/dc/terms/alternative",
            "type": "url",
            "description": "An alternative name for the resource.",
            "required": false
        },
        "dct-rights": {
            "name": "Rights",
            "url": "http://purl.org/dc/terms/rights",
            "type": "url",
            "description": "This describes the rights under which the catalog can be used/reused and not the datasets. Even if theses rights apply to all the catalog datasets and distributions, it should be replicated on each distribution.",
            "required": false
        },
        "fdp-metadataidentifier": {
            "name": "Metadata identifier",
            "url": "http://rdf.biosemantics.org/ontologies/fdp-o#metadataIdentifier",
            "type": "url",
            "description": "Identifier of the metadata entry",
            "required": true,
            "generated": true,
            "nested": {
                "type": "http://purl.org/spar/datacite/ResourceIdentifier",
                "components": {
                    "metadata-dct-identifier": {
                        "name": "Identifier",
                        "url": "http://purl.org/dc/terms/identifier",
                        "type": "text",
                        "description": "Unique identifier for this resource",
                        "required": true
                    }
                }
            }
        },
        "rdfs-label": {
            "name": "Label",
            "url": "http://www.w3.org/2000/01/rdf-schema#label",
            "type": "text",
            "description": "Label that indicates the thing",
            "required": false,
            "generated": true
        },
        "r3d-datacatalog": {
            "name": "Catalog",
            "url": "http://www.re3data.org/schema/3-0#dataCatalog",
            "type": "url",
            "description": "Points out a dcat:Catalog with Datasets stored inside this Repository, with at least one Distribution",
            "multiple": true,
            "required": true,
            "generated": true
        },
        "r3d-institution": {
            "name": "Institution",
            "url": "http://www.re3data.org/schema/3-0#institution",
            "type": "url",
            "description": "Institute that governs this fair datapoint",
            "required": false,
            "nested": {
                "type": "http://xmlns.com/foaf/0.1/Organization",
                "components": {
                    "institure-foaf-name": {
                        "name": "Name",
                        "url": "http://xmlns.com/foaf/0.1/name",
                        "type": "text",
                        "description": "Name of the insitution",
                        "required": true
                    }
                }
            }
        },
        "r3d-repositoryidentifier": {
            "name": "Repository identifier",
            "url": "http://www.re3data.org/schema/3-0#repositoryIdentifier",
            "type": "url",
            "description": "Identifier of the repository.",
            "required": true,
            "generated": true,
            "nested": {
                "type": "http://purl.org/spar/datacite/ResourceIdentifier",
                "components": {
                    "dct-identifier": {
                        "name": "Identifier",
                        "url": "http://purl.org/dc/terms/identifier",
                        "type": "text",
                        "description": "Unique identifier for this resource",
                        "required": true
                    }
                }
            }
        }
    }
}